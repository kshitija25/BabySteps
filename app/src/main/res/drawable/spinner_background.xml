<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Default State -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <stroke
                android:width="2dp"
                android:color="@color/BabySteps_primary" />
            <corners android:radius="8dp" />
            <padding
                android:left="8dp"
                android:right="8dp"
                android:top="8dp"
                android:bottom="8dp" />
        </shape>
    </item>

    <!-- Disabled State -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/BabySteps_primary" />
            <stroke
                android:width="2dp"
                android:color="@color/BabySteps_primary" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
