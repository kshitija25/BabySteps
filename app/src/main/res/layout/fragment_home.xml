<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/scrollable_content"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/contentLayout">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp">

                <FrameLayout
                    android:id="@+id/statusLayout"
                    android:layout_width="match_parent"
                    android:layout_height="500dp">

                    <ImageView
                        android:id="@+id/statusContainerImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/content_bg_main"/>

                    <ImageView
                        android:id="@+id/babyGrowthImageView"
                        android:layout_gravity="center"
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:layout_marginBottom="50dp"
                        android:elevation="5dp"
                        android:contentDescription="TODO" />

                    <TextView
                        android:id="@+id/dayNumberTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|center"
                        android:gravity="center"
                        android:text="Day n"
                        android:layout_margin="20dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/remainingDaysTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:text="Remaining Days:"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:layout_marginTop="40dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </FrameLayout>

<!--                <TextView-->
<!--                    android:id="@+id/babyAgeTextView"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_gravity="center|bottom"-->
<!--                    android:fontFamily="@font/poppins"-->
<!--                    android:gravity="center"-->
<!--                    android:text="Your:"-->
<!--                    android:textSize="14sp"-->
<!--                    android:textColor="@color/white"-->
<!--                    android:layout_marginBottom="167dp"-->
<!--                    app:layout_constraintBottom_toBottomOf="parent"-->
<!--                    app:layout_constraintStart_toStartOf="parent"-->
<!--                    app:layout_constraintTop_toTopOf="parent" />-->

                <FrameLayout
                    android:id="@+id/descriptionLayout"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="5dp">

                    <ImageView
                        android:id="@+id/descriptionBackgroundImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/layout_bg" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/babyGrowthTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Baby's growth:"
                            android:maxLines="4"
                            android:ellipsize="end"
                            android:fontFamily="@font/poppins"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/momHealthTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="7dp"
                            android:text="Mommy's changes:"
                            android:maxLines="4"
                            android:ellipsize="end"
                            android:fontFamily="@font/poppins"
                            android:textSize="12sp" />
                    </LinearLayout>
                </FrameLayout>
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_marginHorizontal="10dp"
                        android:background="@drawable/layout_bg_wgradient"
                        android:elevation="2dp"
                        android:layout_margin="10dp">

                        <LinearLayout
                            android:layout_width="220dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/view_your_calendar"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/poppins_semibold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/stay_organized_and_keep_track_of_important_dates_and_milestones_throughout_your_pregnancy"
                                android:textSize="12sp"
                                android:textColor="@color/dark_gray"
                                android:layout_marginStart="20dp"
                                android:fontFamily="@font/poppins"/>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="110dp"
                            android:layout_height="90dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/img_calendar" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_marginHorizontal="10dp"
                        android:background="@drawable/layout_bg_wgradient"
                        android:elevation="2dp"
                        android:layout_margin="10dp">

                        <LinearLayout
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/know_the_hospitals_nnear_you"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/poppins_semibold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/hospital_tagline"
                                android:textSize="12sp"
                                android:textColor="@color/dark_gray"
                                android:layout_marginStart="20dp"
                                android:fontFamily="@font/poppins"/>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="110dp"
                            android:layout_height="90dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/img_hospital" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_marginHorizontal="10dp"
                        android:background="@drawable/layout_bg_wgradient"
                        android:layout_margin="10dp"
                        android:elevation="2dp">

                        <LinearLayout
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/learn"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/poppins_semibold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tipsnadvice_desc"
                                android:textSize="12sp"
                                android:textColor="@color/dark_gray"
                                android:layout_marginStart="20dp"
                                android:fontFamily="@font/poppins"/>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="110dp"
                            android:layout_height="90dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/img_tips"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_kick_tracker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:contentDescription="kick_tracker"
        android:src="@drawable/ic_kick"
        android:tint="#D9D5D5"
        app:backgroundTint="#E8E8ED"
        app:layout_anchorGravity="bottom|end"
        app:rippleColor="@color/BabySteps_primary" />
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Your view or layout to be shimmered -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/shimContentLayout">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="500dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/shim_status_container"/>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="5dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shim_status_container" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>
                </FrameLayout>
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_marginHorizontal="10dp"
                        android:background="@drawable/shim_status_container"
                        android:elevation="2dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_marginHorizontal="10dp"
                        android:background="@drawable/shim_status_container"
                        android:elevation="2dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_marginHorizontal="10dp"
                        android:background="@drawable/shim_status_container"
                        android:elevation="2dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
</RelativeLayout>
